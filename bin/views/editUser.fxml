<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ProfileController"
            stylesheets="@../styles/edit.css"
            prefWidth="400" prefHeight="500">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        
        <!-- Marge en haut uniquement pour le label -->
<Label text="Édition du profil utilisateur" style="-fx-font-size: 16px; -fx-font-weight: bold;">
    <VBox.margin>
        <Insets top="0" bottom="0"/>
    </VBox.margin>
</Label>

        
        <TextField fx:id="firstNameField" promptText="Prénom" />
        <TextField fx:id="lastNameField" promptText="Nom" />
        <TextField fx:id="userNameField" promptText="Nom d'utilisateur" />
    
        <Button text="Mettre à jour" onAction="#handleUpdateProfile"/>
    </VBox>
</AnchorPane>