<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminController">

    <!-- En-tête -->
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Tableau de bord Administrateur" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Contenu Principal -->
    <center>
        <HBox spacing="20" padding="20">

            <!-- Table des Utilisateurs -->
            <VBox spacing="10">
                <Label text="Utilisateurs enregistrés" style="-fx-font-size: 16px;"/>
                <TableView fx:id="usersTable">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colUsername" text="Nom d'utilisateur" prefWidth="150"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="colIsAdmin" text="Admin" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Button text="Supprimer utilisateur" fx:id="deleteButton" onAction="#deleteUser"/>
                </HBox>
            </VBox>

            <!-- Section des messages des utilisateurs -->
            <VBox spacing="10">
                <Label text="Messages des utilisateurs" style="-fx-font-size: 16px;"/>
                <ListView fx:id="messagesList" prefHeight="200"/>
            </VBox>

            <!-- Gestion des tracks -->
            <VBox spacing="10">
                <Label text="Gérer les Tracks" style="-fx-font-size: 16px;"/>
                
                <GridPane hgap="10" vgap="10">
                    <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="trackTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Artiste:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="trackArtist" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Album:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="trackAlbum" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Genre:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="trackGenre" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10">
                    <Button text="Ajouter Track" fx:id="addTrackButton" onAction="#addTrack"/>
                    <Button text="Supprimer Track" fx:id="deleteTrackButton" onAction="#deleteTrack"/>
                </HBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
