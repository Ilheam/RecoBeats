<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController"
            stylesheets="@../styles/login.css" prefWidth="600" prefHeight="400">

    <VBox fx:id="loginVBox" spacing="15" alignment="CENTER" prefWidth="300" prefHeight="250"
          layoutX="150" layoutY="75">
        <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
        <Button text="Se connecter" onAction="#handleLogin" />
        <Button text="S'inscrire" onAction="#handleRegisterButton" />
    </VBox>

</AnchorPane>