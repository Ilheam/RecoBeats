<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.HomeController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #1e1e2f; -fx-font-family: 'Segoe UI';">

    <!-- Toggle Button -->
    <Button layoutX="30" layoutY="25" text="☰"
            style="-fx-font-size: 30px; -fx-text-fill: white; -fx-background-color: transparent;"
            onAction="#toggleMenu"/>

    <HBox layoutY="70" layoutX="0" prefWidth="1000" prefHeight="630">

        <!-- Side Menu -->
        <VBox fx:id="sideMenu"
              visible="true"
              spacing="20.0"
              prefWidth="250"
              style="-fx-background-color: #2a2a3d;">
            <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
            <ImageView fx:id="menuIcon" fitHeight="30" fitWidth="30"/>
            <Button text="Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#goToProfile"/>
            <Button text="Playlists" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#goToPlaylists"/>
            <Button text="Favorites" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#goToFavorites"/>
        </VBox>

        <!-- Main Content Area -->
        <VBox spacing="15.0" prefWidth="750">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="🎧 Bienvenue sur Recobeats" style="-fx-font-size: 28px; -fx-text-fill: white;" />

            <HBox spacing="10">
                <TextField fx:id="searchField"
                           promptText="🔍 Rechercher une chanson..."
                           style="-fx-background-color: #2a2a3d; -fx-text-fill: white;
                                  -fx-prompt-text-fill: #999; -fx-background-radius: 10;
                                  -fx-border-radius: 10; -fx-border-color: #3e5cb6;"
                           prefWidth="250"/>
                <Button text="Rechercher"
                        style="-fx-background-color: #3e5cb6; -fx-text-fill: white;
                               -fx-background-radius: 10;"
                        onAction="#handleSearch"/>
            </HBox>

            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: transparent;">
                <HBox fx:id="songListContainer" spacing="15.0" style="-fx-background-color: transparent;">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                </HBox>
            </ScrollPane>
        </VBox>
    </HBox>
</AnchorPane>
