<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.RegisterController"
            stylesheets="@../styles/register.css">
    <!-- StackPane pour centrer la VBox dans la fenêtre -->
    <StackPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- VBox centrée avec taille fixe -->
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="400">
            <Label text="Inscription" style="-fx-font-size: 24px;" />

            <TextField fx:id="firstNameField" promptText="Nom" maxWidth="220" minWidth="220"/>
            <TextField fx:id="lastNameField" promptText="Prénom" maxWidth="220" minWidth="220"/>
            <TextField fx:id="userNameField" promptText="Nom d'utilisateur" maxWidth="220" minWidth="220"/>
            <PasswordField fx:id="passwordField" promptText="Mot de passe" maxWidth="220" minWidth="220"/>

            <Button text="S'inscrire" onAction="#handleRegister" maxWidth="220" minWidth="220"/>
            <Label fx:id="errorLabel" textFill="red"/>
        </VBox>
    </StackPane>
</AnchorPane>