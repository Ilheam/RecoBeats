<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.WelcomeController"
           style="-fx-background-color: #191414;">
    <VBox fx:id="vboxButtons" alignment="CENTER" spacing="15">
    

        <!-- Image circulaire -->
        <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/RECOBEATS.png" />
            </image>
        </ImageView>

        <!-- Boutons -->
        <VBox alignment="CENTER" spacing="15">
            <Button text="Login" onAction="#handleLogin"
                    style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 40;
                           -fx-background-radius: 30;
                           -fx-background-color: #5F9EA0;
                           -fx-text-fill: white;
                           -fx-cursor: hand;"/>
            <Button text="Register" onAction="#handleRegister"
                    style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 40;
                           -fx-background-radius: 30;
                           -fx-background-color: transparent;
                           -fx-border-color: #5F9EA0;
                           -fx-border-width: 2;
                           -fx-text-fill: #5F9EA0;
                           -fx-cursor: hand;"/>
        </VBox>
    </VBox>
</StackPane>
